@model BookingInputBaseModel

@{
    this.ViewData[GlobalConstants.Title] = "Изпрати багаж";
}

<section class="section-wrapper contact-and-map">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3">
                <h2 class="section-title" style="text-align: center;">
                    @this.ViewData[GlobalConstants.Title]
                </h2>
                <form asp-action="Booking" asp-controller="Bookings" asp-area="" class="form text-center">
                    <partial name="_BookingPartial" model="this.Model" />
                    <h4 style="color: black">Информация за багажа</h4>
                    <div class="input-group">
                        <input asp-for="Baggage.Height" class="form-control border-radius border-right" placeholder="Височина" required />
                        <span asp-validation-for="Baggage.Height" class="text-danger"></span>
                        <span class="input-group-addon  border-radius custom-addon">
                            <i class="ion-arrow-graph-up-right"></i>
                        </span>
                    </div>
                    <div class="input-group">
                        <input asp-for="Baggage.Width" class="form-control border-radius border-right" placeholder="Широчина" required />
                        <span asp-validation-for="Baggage.Width" class="text-danger"></span>
                        <span class="input-group-addon  border-radius custom-addon">
                            <i class="ion-code-working"></i>
                        </span>
                    </div>
                    <div class="input-group">
                        <input asp-for="Baggage.Weight" class="form-control border-radius border-right" placeholder="Тегло" required />
                        <span asp-validation-for="Baggage.Weight" class="text-danger"></span>
                        <span class="input-group-addon  border-radius custom-addon">
                            <i class="ion-briefcase"></i>
                        </span>
                    </div>

                    <input type="submit" class="btn btn-default border-radius custom-button" value="Запази" />
                </form>
            </div> <!-- /.col-sm-6 -->
        </div>
    </div>
</section>