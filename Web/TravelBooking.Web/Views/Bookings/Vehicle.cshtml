@model BookingInputBaseModel

<section class="section-wrapper contact-and-map">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3">
                <h2 class="section-title" style="text-align: center;">
                    Изпрати мотор
                </h2>
                <form asp-action="Booking" asp-controller="Bookings" asp-area="" class="form text-center">
                    <partial name="_BookingPartial" model="this.Model" />
                    <h4 style="color: black">Информация за мотора</h4>
                    <div class="input-group">
                        <select asp-for="Vehicle.Type" class="form-control border-radius border-right">
                            <option>Пистов</option>
                            <option>Кросов</option>
                            <option>Скутер</option>
                        </select>
                        <span class="input-group-addon  border-radius custom-addon">
                            <i class="ion-android-bicycle"></i>
                        </span>
                    </div>

                    <input type="submit" class="btn btn-default border-radius custom-button" value="Запази" />
                </form>
            </div> <!-- /.col-sm-6 -->
        </div>
    </div>
</section>