@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<section class="section-wrapper contact-and-map">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3">
                <h1 class="text-center" style="color: black">Вход</h1>
                <form id="account" method="post" class="form text-center">
                    <div class="input-group">
                        <input asp-for="Input.Email" class="form-control border-radius border-right" placeholder="Имейл" required />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <span class="input-group-addon  border-radius custom-addon">
                            <i class="ion-email"></i>
                        </span>
                    </div>
                    <div class="input-group">
                        <input asp-for="Input.Password" class="form-control border-radius border-right" placeholder="Парола" required />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <span class="input-group-addon  border-radius custom-addon">
                            <i class="ion-ios-locked"></i>
                        </span>
                    </div>
                    <div class="input-group" style="color: black">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Вход</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Забравена парола?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
